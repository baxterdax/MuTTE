# MTE-API Environment Configuration
# Multi-Tenant Transactional Email API

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# PostgreSQL connection string
# Example: postgresql://username:password@localhost:5432/mattedb
DATABASE_URL=postgresql://matte:matte_password@localhost:5432/mattedb

# Security & Encryption
# 32-byte encryption key for securing SMTP credentials (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Admin API Key
# Used to authenticate admin operations (tenant CRUD)
ADMIN_API_KEY=dev-admin-key

# Rate Limiting
# Maximum requests per minute per tenant
MAX_REQUESTS_PER_MINUTE=100

# Logging Configuration
# Log level: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# Email Configuration (Default)
# Used as fallback when tenant doesn't specify from email
SMTP_DEFAULT_USER=default@example.com

# Optional: Redis Configuration (for future use with email queues)
# REDIS_URL=redis://localhost:6379

# Development Settings
# Enable/disable CORS for development
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Database Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000

# Email Retry Settings
EMAIL_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY=5000

# Security Headers
# Content Security Policy and other security headers
ENABLE_SECURITY_HEADERS=true
